CREATE TABLE latest_event (
    id INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    date DATETIME NOT NULL,
    link VARCHAR(255) NOT NULL);
DELIMITER $$
CREATE TRIGGER `default_date` BEFORE INSERT ON `latest_event` FOR EACH ROW
    if ( isnull(new.date) ) then
    set new.date=curdate();                                                          
    end if;                                                                                    
    $$
delimiter ;
INSERT INTO latest_event (date, link)
VALUES
("2020-01-01", "https://www.youtube.com/embed/VNTRlO2zuSU"),
(NULL, "https://www.youtube.com/embed/0voJG1P1ago");



CREATE TABLE upcoming_event (
    id INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(255) NOT NULL,
    details VARCHAR(255) NOT NULL,
    date TIMESTAMP NOT NULL,
    image VARCHAR(255) NOT NULL,
    link VARCHAR(255) NOT NULL);
