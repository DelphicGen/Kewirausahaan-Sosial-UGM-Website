<%- include('partials/header') %>

  <!-- Landing Page -->
  <div class="landing-page" id="landing-page">
    <div class="filter">
      <div class="container landing-page-container">

        <%- include('partials/nav') %>

        <img class="triangle" src="./assets/images/triangle.png" alt="triangle">

        <div class="wow fadeInUp heading-container">
          <div class="heading">
            <h1 class="main-heading">Bentuk Mindset Wirausaha</h1>
            <h5>Lorem ipsum dolor sit amet consectetur adipisicing elit. Soluta ab vitae sequi, illum ratione veritatis inventore ut nisi enim quasi in voluptas placeat consequuntur autem officia doloribus quidem qui unde.</h5>
            <button class="register-btn btn">Gabung Sekarang</button>
          </div>
        </div>

      </div>
    </div>
