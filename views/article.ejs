<%- include('admin/function') %>
<%- include('partials/header', {user: "user"}) %>
    <div class="article-page">
        <div class="container">
            <%- include('partials/nav') %>
            
            <h1 class="font-weight-bold mt-3"><%= article.title %></h1>

            <small class="mt-1">by <%= article.author %>, <%= dateFormat(article.created) %></small> <br />

            <img class="article-full-img" src="<%= article.image%>" alt="<%= article.title %>">

            <div class="article-full-details full-details mt-4">
                <%= article.full_details %>
            </div>
        </div>
    </div>

<%- include('partials/script') %>