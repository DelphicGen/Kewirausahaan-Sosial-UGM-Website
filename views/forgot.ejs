<%- include('partials/header') %>

<div class="forgot">
    <div class="forgot__container">
        <h1 class="forgot__header">Forgot Password</h1>
        <% if(messages.error) {%>
            <%= messages.error %>
        <% } %>
        <% if(messages.info) {%>
            <%= messages.info %>
        <% } %>

        <form class="adminForm__form" action="/forgot" method="POST">
            <%- include('partials/input', {name: 'email', type: 'email', required: true}) %>
            <button type="submit" class="forgot__button button button--orange submitBtn">Reset Password</button>
            <a href="/login" class="btn">Login</a>
        </form>
    </div>

</div>
<%- include('partials/script') %>